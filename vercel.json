{
  "version": 2,
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/banner",
      "dest": "/api/banner.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
